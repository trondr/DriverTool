<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="DriverTool" type="System.Configuration.NameValueSectionHandler" />
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>
  <appSettings>
    <add key="log4net.Internal.Debug" value="true"/>
  </appSettings>
  <DriverTool>
    <add key="LogDirectoryPath" value="%public%\Logs\DriverTool" />
    <add key="LogFileName" value="DriverTool.%USERNAME%.log" />    
  </DriverTool>
  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <!--https://logging.apache.org/log4net/log4net-1.2.13/release/sdk/log4net.Layout.PatternLayout.html-->
        <conversionPattern value="|%-30logger|%date|%-5level|%message%newline" />
      </layout>
    </appender>       
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="ImmediateFlush" value="true" />
      <file type="log4net.Util.PatternString" value="%property{LogFile}">
        <converter>
          <name value="DriverUtil" />
          <type value="Log4Net_CMTrace.CMClientLogFolderPatternConverter,Log4NetCMTrace" />
        </converter>
        <conversionPattern value="%property{LogFile}" />
      </file>
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="100" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <immediateFlush value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <converter>
          <name value="numlevel" />
          <type value="Log4Net_CMTrace.NumericLevelPatternConverter,Log4NetCMTrace" />
        </converter>
        <converter>
          <name value="utcoffset" />
          <type value="Log4Net_CMTrace.UTCOffsetPatternConverter,Log4NetCMTrace" />
        </converter>
        <conversionPattern value="&lt;![LOG[%message]LOG]!&gt;&lt;time=&quot;%date{HH:mm:ss.fff}-%utcoffset&quot; date=&quot;%date{MM-dd-yyyy}&quot; component=&quot;%logger&quot; context=&quot;&quot; type=&quot;%numlevel&quot; thread=&quot;%thread&quot; file=&quot;%file:%line&quot;&gt; %newline" />        
      </layout>
    </appender>    
    <root>
      <level value="INFO" />
      <appender-ref ref="RollingFileAppender" />      
      <appender-ref ref="ConsoleAppender" />
    </root>
    <!-- Print only messages of level WARN or above in the Type Name -->
    <!--<logger name="TypeName">
      <level value="WARN" />
    </logger>-->
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
</configuration>
