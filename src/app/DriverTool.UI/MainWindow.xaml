<Window x:Class="DriverTool.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriverTool.UI"
        xmlns:viewModels="clr-namespace:DriverTool.Library.CmUi;assembly=DriverTool.Library"
        mc:Ignorable="d"
        Title="DriverTool - Packaging CM Device Drivers" 
        Height="600"
        Width="1024"
        Icon="NCmdLiner.ico">
    <Window.DataContext>
        <viewModels:ExampleCmPackagesViewModel/>
    </Window.DataContext>

    <Grid d:DataContext="{d:DesignInstance Type=viewModels:ExampleCmPackagesViewModel, IsDesignTimeCreatable=True}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!--Source: https://stackoverflow.com/questions/833943/watermark-hint-text-placeholder-textbox-->
        <Grid>
            <TextBox  Width="250"  VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="SearchTextBox" Margin="5" Text="{Binding SearchText}"/>
            <TextBlock IsHitTestVisible="False" Text="Search models" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <ListView Grid.Row="1" Grid.Column="0" ItemsSource="{Binding CmPackages}" local:ListViewExtensions.SelectedValues="{Binding SelectedCmPackages}" >
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="IsSelected" Value="{Binding Mode=TwoWay, Path=IsSelected}"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Manufacturer" DisplayMemberBinding="{Binding Manufacturer }"/>
                    <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model }"/>
                    <GridViewColumn Header="ModelCodes" DisplayMemberBinding="{Binding ModelCodes }"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
            <Button Content="-&gt;" Command="{Binding AddPackageCommand}" Margin="10"/>
            <Button Content="&lt;-" Command="{Binding RemovePackageCommand}" Margin="10"/>
        </StackPanel>

        <Label Grid.Row="0" Grid.Column="2" Content="To be packaged:"></Label>

        <ListView Grid.Row="1" Grid.Column="2" ItemsSource="{Binding ToBePackagedCmPackages}" local:ListViewExtensions.SelectedValues="{Binding SelectedToBePackagedCmPackages}" >
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="IsSelected" Value="{Binding Mode=TwoWay, Path=IsSelected}"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Manufacturer" DisplayMemberBinding="{Binding Manufacturer }"/>
                    <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model }"/>
                    <GridViewColumn Header="ModelCodes" DisplayMemberBinding="{Binding ModelCodes }"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Load" Command="{Binding LoadCommand}" Margin="10" ToolTip="Load models"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="1" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Package" Command="{Binding PackageCommand}" Margin="10"/>
        </StackPanel>

        <StatusBar Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <TextBlock Text="{Binding StatusMessage}"  />
            </StatusBarItem>
            <StatusBarItem Grid.Column="2">
                <ProgressBar 
                    IsIndeterminate="{Binding IsBusy}"
                    Value="0" 
                    Visibility="Visible" 
                    Width="150" 
                    Height="15" 
                    Background="Transparent" BorderThickness="1"/>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
